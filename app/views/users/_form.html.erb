<%= form_with model: @user, local: true do |f| %>
  <!--エラー出力処理-->
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @user.errors.full_messages.each do |mess| %>
            <li><%= mess %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!--フォーム本体-->
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.submit '会員登録' %>
  </div>
<% end %>