<%= form_with model: @post, local: true, url: new_or_edit do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
    <h2><%= @post.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :image %>
    <%= image_tag(@post.image.thumb.url) if @post.image.thumb.url %>
    <%= f.file_field :image %>
  </div>
    <%= f.hidden_field :image_cache %>
  <div>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <div>
    <%= f.submit '投稿' %>
  </div>
<% end %>