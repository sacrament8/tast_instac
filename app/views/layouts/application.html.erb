<!DOCTYPE html>
<html>
<head>
  <title>TaskInstac</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class="container">
    <div class="row">
    <nav class="navbar navbar-expand-lg navbar-light bg-primary col-md-12">
      <span class="navbar-brand text-warning logo">INSTAC</span>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "#{ current_user.name }", user_path(current_user), class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "記事投稿", new_post_path, class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "みんなの投稿", posts_path, class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "お気に入り", look_all_user_path(current_user), class:'nav-link text-light' %>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "ログアウト", session_path(current_user), method: :delete, class:'nav-link text-light' %>
            </li>
        </ul>
          <% else %>
        <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "会員登録", new_user_path, class:'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_session_path, class:'nav-link text-light' %>
            </li>
        </ul>
          <% end %>
    </nav>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "alert-#{key} alert") %>
    <% end %>


    <%= yield %>

    <footer class="fixed-bottom  col-md-12">
      <div class="footer_font text-center align-middle">instac</div>
    </footer>
    </div>
  </div>
</body>
</html>